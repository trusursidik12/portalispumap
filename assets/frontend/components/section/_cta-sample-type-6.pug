// Call to action type #6
section.section.section-md.bg-image.novi-background( style='background-image: url("images/image-04-1920x935.jpg")', data-preset!={ title:'Call To Action', category:'call to action', reload:false, id:'call-to-action-6' } )
	.container
		.row.row-30.justify-content-between.align-items-center
			.col-lg-6.col-xl-5.context-dark
				h1 Call to action type #6
				h5 Feel free to schedule your appointment today to get proper access to all our services. Once you submit your appointment, we will call you back to discuss the details.
			.col-lg-6
				article.accent-box
					h4.accent-box-title Make an appointment
					form.accent-box-form.rd-mailform( data-form-output='form-output-global', data-form-type='contact', method='post', action='components/rd-mailform/rd-mailform.php' )
						.form-row.row-15.novi-disabled
							.col-sm-6.col-lg-12
								.form-group
									label( for='input-name' ) Name:
									.position-relative
										input.form-control( id='input-name', type='text', name='name', placeholder='Your name', data-constraints='@Required' )
							.col-sm-6.col-lg-12
								.form-group
									label( for='input-email' ) E-mail:
									.position-relative
										input.form-control( id='input-email', type='email', name='email', placeholder='Your e-mail address', data-constraints='@Email @Required' )
							.col-12
								.form-group
									label( for='input-date' ) Date
									.form-group-icon.novi-disabled.datetimepicker-group
										input.form-control( id='input-date', type='text', name='date', placeholder='Select date', data-datetimepicker!={ format: 'L' }, data-constraints='@Required' )
										.form-icon.int-calendar.novi-icon
							.col-sm-6
								.form-group
									label( for='input-time-start' ) Required time interval start:
									.form-group-icon.novi-disabled.datetimepicker-group
										input.form-control( id='input-time-start', type='text', name='time-start', placeholder='Select time', data-datetimepicker!={ format: 'LT' }, data-constraints='@Required' )
										.form-icon.int-clock.novi-icon
							.col-sm-6
								.form-group
									label( for='input-time-end' ) Required time interval end:
									.form-group-icon.novi-disabled.datetimepicker-group
										input.form-control( id='input-time-end', type='text', name='time-end', placeholder='Select time', data-datetimepicker!={ format: 'LT' }, data-constraints='@Required' )
										.form-icon.int-clock.novi-icon
						button.btn.btn-block.btn-lg.btn-primary.accent-box-btn( type='submit' ) Submit

					#form-output-global.form-output.snackbar.snackbar-secondary
