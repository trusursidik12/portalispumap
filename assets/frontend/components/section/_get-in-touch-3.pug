// Get in touch
section.section.section-lg.bg-transparent.text-center.novi-background( data-preset!={ title:'Get In Touch', category:'form, contacts', reload:true, id:'get-in-touch-4' } )
	.container
		h2 Get in Touch
		form.rd-mailform( data-form-output='form-output-global', data-form-type='contact', method='post', action='components/rd-mailform/rd-mailform.php' )
			.row.row-20.novi-disabled
				.col-md-4
					.form-group
						label( for='input-name' ) Name:
						.position-relative
							input.form-control( id='input-name', type='text', name='name', placeholder='Your name', data-constraints='@Required' )
				.col-md-4
					.form-group
						label( for='input-email' ) E-mail:
						.position-relative
							input.form-control( id='input-email', type='email', name='email', placeholder='Your e-mail address', data-constraints='@Email @Required' )
				.col-md-4
					.form-group
						label( for='input-tel' ) Phone:
						.position-relative
							input.form-control( id='input-tel', type='tel', name='tel', placeholder='X-XXX-XXX-XXXX', data-constraints='@PhoneNumber @Required' )
				.col-12
					.form-group
						label( for='input-question' ) Question:
						.position-relative
							textarea.form-control( id='input-question', name='question', placeholder='Your question', data-constraints='@Required' )
			.offset-md
				button.btn.btn-lg.btn-primary( type='submit' ) Submit

		#form-output-global.form-output.snackbar.snackbar-secondary
