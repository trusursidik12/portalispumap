// Portfolio grid vertical
section.section.section-lg.bg-transparent.novi-background( data-preset!={ title:'Portfolio Grid Vertical', category:'thumbnail, gallery, isotope', reload:true, id:'portfolio-grid-vertical' } )
	.container
		h1 Grid layout
		.isotope-wrap.isotope-scale-vertical
			.isotope-filters
				.isotope-filter.active( data-isotope-filter="*" ) All
				.isotope-filter( data-isotope-filter=".design" ) Design
				.isotope-filter( data-isotope-filter=".development" ) Development
				.isotope-filter( data-isotope-filter=".marketing" ) Marketing
			.isotope.row.row-30.row-md-40( data-lightgallery )
				.col-6.isotope-item.development
					a.thumbnail-up-shadow.lightgallery-item( href='images/image-15-1200x1000.jpg' )
						+img( 'image-15-400x400' )
				.col-6.isotope-item.development
					a.thumbnail-up-shadow.lightgallery-item( href='images/image-16-1200x1000.jpg' )
						+img( 'image-16-400x400' )

