include ../breadcrumb/_breadcrumb

// Get in touch
section.section.section-lg.section-layer.pt-5( data-preset!={ title:'Get In Touch', category:'form, contacts', reload:true, id:'get-in-touch-6' } )
	.bg-layer.bg-image.novi-background( style='bottom: 45%; background-image: url(images/image-04-1920x772.jpg);' )
	.container
		+breadcrumb( breadcrumbs ).context-dark
		.row.row-30.justify-content-center.novi-disabled( style='margin-top: 7.5%' )
			.col-md-10.col-lg-8
				.context-dark.text-center
					h1= pageName
					h5 You can contact us any way that is convenient for you. We are available 24/7 via fax or email. You can also use a quick contact form on the right or visit our office personally.
				article.accent-box
					h4.accent-box-title Email us with any questions or inquiries
						br
						| or use our contact data.
					p.accent-box-text Email us with any questions or inquiries or use our contact data.
					form.accent-box-form.rd-mailform( data-form-output='form-output-global', data-form-type='contact', method='post', action='components/rd-mailform/rd-mailform.php' )
						.form-row.row-15.novi-disabled
							.col-sm-6
								.form-group
									label( for='input-name' ) Name:
									.position-relative
										input.form-control( id='input-name', type='text', name='name', placeholder='Your name', data-constraints='@Required' )
							.col-sm-6
								.form-group
									label( for='input-email' ) E-mail:
									.position-relative
										input.form-control( id='input-email', type='email', name='email', placeholder='Your e-mail address', data-constraints='@Email @Required' )
							.col-sm-6
								.form-group
									label( for='input-tel' ) Phone:
									.position-relative
										input.form-control( id='input-tel', type='tel', name='tel', placeholder='X-XXX-XXX-XXXX', data-constraints='@PhoneNumber @Required' )
							.col-sm-6
								.form-group
									label( for='input-subject' ) Subject:
									.position-relative
										input.form-control( id='input-subject', type='text', name='subject', placeholder='Subject', data-constraints='@Required' )
							.col-12
								.form-group
									label( for='input-question' ) Question:
									.position-relative
										textarea.form-control( id='input-question', name='question', placeholder='Your question', data-constraints='@Required' )
						.offset-xs.group-20.d-flex.flex-wrap.justify-content-between.align-items-center
							div: button.btn.btn-lg.btn-primary.accent-box-btn( type='submit' ) Submit
							.small By clicking the button you agree to
								br
								| the #[u.font-weight-medium #[a.link-inherit( href='privacy-policy.html' ) Privacy Policy]] and #[u.font-weight-medium #[a.link-inherit( href='#' ) Terms and Conditions]]

					#form-output-global.form-output.snackbar.snackbar-secondary
