// Nav advanced horizontal sample
section.section.section-lg.bg-transparent.novi-background( data-preset!={ title:'Nav Advanced Horizontal Sample', category:'tab, sample', reload:true, id:'nav-advanced-horizontal-sample' } )
	.container
		h2.text-center Tab type #7
		.tab.tab-shadow-horizontal
			ul.nav.nav-advanced-horizontal.tab-embed( role='tablist' )
				li.nav-item: a.nav-link.active( data-toggle='tab', href='#navAdvanced2-1', role='tab', aria-selected='true' ) Toolkit core
				li.nav-item: a.nav-link( data-toggle='tab', href='#navAdvanced2-2', role='tab', aria-selected='false' ) Ui kit
				li.nav-item: a.nav-link( data-toggle='tab', href='#navAdvanced2-3', role='tab', aria-selected='false' ) Plugins
				li.nav-item: a.nav-link( data-toggle='tab', href='#navAdvanced2-4', role='tab', aria-selected='false' ) Documentation
			.tab-content
				#navAdvanced2-1.tab-pane.fade.show.active( role='tabpanel' )
					include ../tab/_tab-content-1

				#navAdvanced2-2.tab-pane.fade( role='tabpanel' )
					include ../tab/_tab-content-2

				#navAdvanced2-3.tab-pane.fade( role='tabpanel' )
					include ../tab/_tab-content-5

				#navAdvanced2-4.tab-pane.fade( role='tabpanel' )
					include ../tab/_tab-content-4
