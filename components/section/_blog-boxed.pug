					coments:  '3',
					title:    post1.title,
					img:      'image-05-760x489',
					postText: post1.textShort,
					tags:     [ 'Web design', 'Articles' ]
				})

				+post-boxed({
					label:    'HTML',
					autor:    'Mark Rogers',
					date:     'September 16, 2019',
					coments:  '3',
					title:    post2.title,
					img:      'image-08-760x489',
					postText: post2.textShort2,
					tags:     [ 'Web design', 'Articles' ]
				})

				+post-boxed({
					label:    'HTML',
					autor:    'Mark Rogers',
					date:     'September 16, 2019',
					coments:  '3',
					title:    post3.title,
					img:      'image-11-760x489',
					postText: post1.textShort2,
					tags:     [ 'Web design', 'Articles' ]
				})

				+pag-simple([
