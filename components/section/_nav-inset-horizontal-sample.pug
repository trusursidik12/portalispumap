// Nav inset horizontal sample
section.section.section-lg.bg-transparent.novi-background( data-preset!={ title:'Nav Inset Horizontal Sample', category:'tab, sample', reload:true, id:'nav-inset-horizontal-sample' } )
	.container
		h2.text-center Tab type #9
		.tab.tab-shadow-horizontal
			ul.nav.nav-inset-vertical.tab-embed( role='tablist' )
				li.nav-item: a.nav-link.active( data-toggle='tab', href='#navInset2-1', role='tab', aria-selected='true' ) Toolkit core
				li.nav-item: a.nav-link( data-toggle='tab', href='#navInset2-2', role='tab', aria-selected='false' ) Ui kit
				li.nav-item: a.nav-link( data-toggle='tab', href='#navInset2-3', role='tab', aria-selected='false' ) Plugins
				li.nav-item: a.nav-link( data-toggle='tab', href='#navInset2-4', role='tab', aria-selected='false' ) Documentation
			.tab-content
				#navInset2-1.tab-pane.fade.show.active( role='tabpanel' )
					include ../tab/_tab-content-1

				#navInset2-2.tab-pane.fade( role='tabpanel' )
					include ../tab/_tab-content-2

				#navInset2-3.tab-pane.fade( role='tabpanel' )
					include ../tab/_tab-content-5

				#navInset2-4.tab-pane.fade( role='tabpanel' )
					include ../tab/_tab-content-4
