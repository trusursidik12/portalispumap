include ../quote/_quote

// Quote centered slider
section.section.section-lg.bg-transparent.novi-background( data-preset!={ title:'Quote Centered Slider', category:'quote, carousel', reload:true, id:'quote-centered-slider' } )
	.container
		h2.text-center Testimonials slider type #6
		.row.justify-content-center.novi-disabled
			.col-md-10.col-lg-9.col-xl-8
				// Owl Carousel
				.owl-carousel( data-owl= { dots: true, dotsClass: 'owl-dots text-center' } )
					+quote-centered({
						text:     quote1.text,
						img:      'persons/person-01-100x100',
						name:     quote1.name,
						position: quote1.position
					})
					+quote-centered({
						text:     quote2.text,
						img:      'persons/person-02-100x100',
						name:     quote2.name,
						position: quote2.position
					})
					+quote-centered({
						text:     quote3.text,
						img:      'persons/person-03-100x100',
						name:     quote3.name,
						position: quote3.position
					})
