// Offer box detail
section.section.section-lg.bg-transparent.novi-background( data-preset!={ title:'Offer Box Detail Sample', category:'offer box', reload:false, id:'offer-box-detail-sample' } )
	.container
		h2.text-center Offer boxes type #1
		.row.row-30.novi-disabled
			.col-12
				+offer-box-detail({
					img:   'image-05-730x730',
					label: 'Create',
					title: 'Websites',
					description: 'Powerful options & tools, unlimited designs, responsive framework and amazing support are the reasons for our customers to fall in love.'
				})
					.tab.tab-scale.offer-box-tab
						ul.nav.nav-scale( role='tablist' )
