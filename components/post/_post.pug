					span.post-meta-icon.int-clock.novi-icon
					a.post-meta-link( href='post-with-sidebar.html' )= data.date
				.post-meta-item
					span.post-meta-icon.int-chat.novi-icon
					a.post-meta-link( href= data.link ? data.link : 'post-with-sidebar.html' )= data.coments
			h4.post-title: a( href= data.link ? data.link : 'post-with-sidebar.html' )= data.title
			if ( data.postText )
				.post-thumbnail-hover-content
					.post-text= data.postText
