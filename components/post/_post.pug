	.post.post-thumbnail.novi-background( style=`background-image: url( images/${data.img}.jpg)` )&attributes( attributes )
		.post-inner
			.post-meta.post-meta-between
				if ( data.label )
					.post-meta-item: a.post-meta-link.post-meta-link-primary( href='post-with-sidebar.html' )= data.label
