//- Blurb inline
	@param {object} obj - data object
	@param {string} obj.embed - class for icon
	@param {string} obj.title - blurb title
	@param {string} obj.text - blurb text
	@param {string} obj.alignY - vertical align
mixin blurb-inline( obj )
	// Blurb inline
	article.blurb.blurb-inline&attributes( attributes )
		.media.media-md( class= obj.alignY )
			.media-left
				.blurb-embed!= obj.embed
			.media-body
				.blurb-title.h5= obj.title
				.blurb-text= obj.text


