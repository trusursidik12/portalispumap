//- Blurb
	@param {object} obj - data object
	@param {string} obj.embed - class for icon
	@param {string} obj.title - blurb title
	@param {string} obj.text - blurb text
mixin blurb( obj )
	// Blurb
	article.blurb&attributes( attributes )
		.blurb-embed!= obj.embed
		.blurb-title.h5= obj.title
		if( obj.text )
			.blurb-text= obj.text


